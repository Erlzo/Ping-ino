<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.pantallaOsoController">
    <children>
        <VBox spacing="20" alignment="CENTER" layoutX="20.0" layoutY="20.0" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <Label text="¡Te encontraste un oso!" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Label text="¿Quieres usar un pez para evitar retroceder al inicio?" wrapText="true" />
            <HBox spacing="15" alignment="CENTER">
                <Button text="Sí, usar pez" onAction="#usarPez" />
                <Button text="No, volver al inicio" onAction="#noUsarPez" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
